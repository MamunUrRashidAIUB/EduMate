<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required for Firebase Authentication and Realtime Database -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EduMateApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduMate">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".OnboardingActivity"
            android:exported="false"/>
        <activity android:name=".LoginActivity"
            android:exported="false"/>
        <activity android:name=".SignupActivity"
            android:exported="false"/>
        <activity android:name=".home"
            android:exported="false"/>
        <activity android:name=".HomeClassActivity"
            android:exported="false"/>
        <activity android:name=".HomeEventActivity"
            android:exported="false"/>
        <activity android:name=".HomeAssignmentActivity"
            android:exported="false"/>
        <activity android:name=".AddClassActivity"
            android:exported="false"/>
        <activity android:name=".AddAssignmentActivity"
            android:exported="false"/>

    </application>

</manifest>