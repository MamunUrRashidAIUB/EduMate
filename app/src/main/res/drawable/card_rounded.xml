<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#1E1E1E"/> <!-- dark background (adjust if needed) -->

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#B19CD9"/> <!-- neon yellow-green border -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
