<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EduMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EduMate" parent="Base.Theme.EduMate" />
    
    <!-- Custom Button Styles -->
    <style name="EduMateButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/my_button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    
    <style name="EduMateButtonSecondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/my_button_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/my_button_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    
    <style name="EduMateButtonRounded" parent="EduMateButtonPrimary">
        <item name="cornerRadius">25dp</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    
    <!-- Day Button Style -->
    <style name="DayButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    
    <!-- Calendar View Style -->
    <style name="CalendarViewStyle">
        <item name="android:dateTextAppearance">@style/CalendarDateTextAppearance</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeekDayTextAppearance</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarHeaderTextAppearance</item>
    </style>
    
    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textColor">#E2F163</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="CalendarHeaderTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background. -->
        <item name="windowSplashScreenBackground">@color/black</item>
        <!-- Use windowSplashScreenAnimatedIcon to add your logo. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashlogo</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.EduMate</item> <!-- Make sure Theme.EduMate is your main app theme -->
    </style>
</resources>