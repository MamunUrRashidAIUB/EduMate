<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hi, Anna"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </LinearLayout>

            <!-- Assignment Deadline Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment Deadline"
                android:textColor="#E2F163"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp" />

            <!-- Filter Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Due Soon"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/card_rounded"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Upcoming"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/yellow"
                    android:background="@drawable/card_rounded"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Completed"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/card_rounded"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Assignment Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/card_rounded"
                android:backgroundTint="#E2F163"
                android:padding="2dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/dark_card"
                    android:background="@drawable/card_rounded"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"

                    >

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assignment Title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet consectetur. Tortor aenean suspendisse pretium nunc non facilisi."
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:layout_below="@id/title1"
                        android:layout_marginTop="6dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/title1"
                        android:layout_marginTop="44dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginEnd="4dp"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submission date : 2025/03/07"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

            <!-- (Repeat CardView for each assignment, changing flag color and text as needed) -->

        </LinearLayout>
    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:backgroundTint="#F44336"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
